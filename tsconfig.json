{
  
  "include": ["**/*.ts"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2021"],
    "types": ["node"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ESNext",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    // "skipLibCheck": true,
    // "noUnusedLocals": true,
    "noUnusedParameters": false,
    // Remix takes care of building everything in `remix build`.
    "noEmit": true
  }
}
